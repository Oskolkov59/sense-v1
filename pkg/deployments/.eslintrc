{
  "root": true,
  "plugins": ["prettier", "@nomiclabs/eslint-plugin-hardhat-internal-rules"],
  "extends": ["eslint:recommended"],
  "rules": {
    "prettier/prettier": ["error"],
    "prefer-const": "off"
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "hre": true,
    "ethers": true,
    "deployments": true,
    "getNamedAccounts": true,
    "getChainId": true,
    "network": true
  }
}
