{
    "name": "@sense-finance/v1-core",
    "version": "1.2.0",
    "description": "Sense V1 Core Contracts",
    "license": "AGPL-3.0-only",
    "repository": {
        "type": "git",
        "url": "https://github.com/sense-finance/sense-v1.git",
        "directory": "pkg/core"
    },
    "files": [
        "src/**/*",
        "!src/tests/*"
    ],
    "scripts": {
        "test": "forge test --no-match-path \"*.tm*\" | gnomon",
        "test:mainnet": "forge test --match-path \"*.tm*\" --fork-url https://eth-mainnet.alchemyapi.io/v2/_gg7wSSi0KMBsdKnGVfHDueq6xMB9EkC | gnomon",
        "test:4626": "4626_TARGET=true forge test --match-path \"**/*.t.sol\" --no-match-path \"**/Adapter.t.sol\" | gnomon",
        "test:fuzz": "yarn exec ./src/tests/fuzz.sh | gnomon",
        "lint": "solhint --config ../../.solhint.json -f table src/**/*.sol",
        "fix": "prettier --ignore-path .gitignore --write src/**/*.sol && yarn lint --fix",
        "gas-snapshot": "forge snapshot --no-match-path \"*.tm*\"",
        "gas-snapshot:diff": "forge snapshot --no-match-path \"*.tm*\" --diff"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^4.7.3",
        "@rari-capital/solmate": "rari-capital/solmate#c8278b3cb948cffda3f1de5a401858035f262060",
        "@sense-finance/v1-fuse": "workspace:pkg/fuse",
        "@sense-finance/v1-utils": "workspace:pkg/utils"
    },
    "devDependencies": {
        "@types/prettier": "^2",
        "gnomon": "^1.5.0",
        "prettier": "^2.7.1",
        "prettier-plugin-solidity": "^1.0.0-beta.17",
        "solhint": "^3.3.7",
        "solhint-plugin-prettier": "^0.0.5"
    }
}
